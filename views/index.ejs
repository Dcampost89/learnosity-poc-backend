// Pass the object to the initialisation of any Learnosity API, in this example the Questions API
<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title>Learnosity SDK - NodeJS</title>
</head>
<body>
    <button id="saveButton">Save Question</button>
    <div id="learnosity-author"></div>
    <script src="https://authorapi.learnosity.com/?v2019.1.LTS"></script>
    <script>
        var request = <%- JSON.stringify(request) %>
        console.log(request);
        var authorApp = window.LearnosityAuthor.init(request, { readyListener: () => {
            authorApp.on('save:success', () => console.log('[save:success]', authorApp.getItem()));
        } });

        document.getElementById('saveButton').addEventListener('click', () => authorApp.save({ navigate: false }));
    </script>
</body>
</html>
